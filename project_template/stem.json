{
  "installPythonRequirements": {
    "isCommand": true,
    "command": "sudo pip3 install --upgrade -r requirements.txt"
  },
  "djangoRun": {
    "isCommand": true,
    "command": [{
        "type": "django",
        "command": "migrate"
      }, {
        "type": "django",
        "command": "generate_public_state"
      }, {
      "type": "django",
      "command": "runserver"
    }]
  },
  "djangoMakeMigrations": {
    "isCommand": true,
    "command": "./manage.py makemigrations"
  },
  "djangoMigrate": {
    "isCommand": true,
    "command": "./manage.py migrate"
  },
  "build": {
    "isCommand": true,
    "path": "{{ project_main_app }}/js",
    "command": "rollup",
    "extraArgs": ["-c"]
  },
  "run": {
    "isCommand": true,
    "command": [{
      "background": true,
      "daemon": true,
      "type": "stem",
      "command": "build",
      "extraArgs": ["--watch"]
    }, {
      "background": true,
      "type": "stem",
      "command": "djangoRun"
    }]
  },
  "setup": {
    "dev": {
      "dependencies": ["redis-server", "nodejs", "postgresql"],
      "npmDependencies": ["babel-cli", "rollup"],
      "command": [
        "installPythonRequirements",
        "djangoMakeMigrations",
        "djangoMigrate",
        "build"
      ]
    },
    "production": {
      "dependencies": ["redis-server", "nodejs", "postgresql"],
      "npmDependencies": [],
      "command": [
        "installPythonRequirements"
      ]
    }
  }
}